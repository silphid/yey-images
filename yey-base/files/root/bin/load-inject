#!/bin/bash

# The YEY_INJECT variable is optional and if not defined makes this script no-op
if [[ -z ${YEY_INJECT+x} ]]; then
  exit
fi

# If the YEY_INJECT variable is defined, the directory it refers to must exist
if [[ ! -d $YEY_INJECT ]]; then
  echo "error: the YEY_INJECT env var must refer to mounted directory used to store injection files"
  exit
fi

cp -auv $YEY_INJECT/. /
